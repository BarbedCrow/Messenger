{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Go Server",
			"type": "shell",
			"command": "go",
			"args": [
				"run",
				"./cmd/server"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$go"
			]
		},
		{
			"label": "Build Go Server",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o",
				"server",
				"./cmd/server"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$go"
			]
		}
	]
}